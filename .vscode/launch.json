    {
      "name": "Client: React.js",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}\\azzb\\frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"]
    },
    {
      "name": "Server: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\azzb\\manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server: Django", "Client: React.js"]
    }
  ]
